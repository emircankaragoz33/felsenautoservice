<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-XXXXXXXXXX');
    </script>
    
    <!-- SEO Meta Tags -->
    <title>@ViewData["Title"] | Felsen Oto Servis - Kocaeli Çayırova Premium Araç Bakımı</title>
    <link rel="icon" type="image/png" href="~/images/logo.png" />
    <link rel="apple-touch-icon" href="~/images/logo.png" />
    <meta name="description" content="@(ViewData["Description"] ?? "Felsen Oto Servis, Kocaeli Çayırova'da premium araç bakımı, motor onarımı, kaporta boya ve profesyonel servis hizmetleri sunar. BMW, Mercedes, Audi profesyonel servisi.")" />
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "felsen, felsen auto, felsen oto servis, oto servis çayırova, oto servis kocaeli, araç bakımı, motor onarımı, bmw servisi, mercedes servisi, audi servisi, kocaeli oto tamir, premium oto servis")" />
    <meta name="author" content="Felsen Auto" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.felsenauto.com@(ViewContext.HttpContext.Request.Path)" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.felsenauto.com@(ViewContext.HttpContext.Request.Path)" />
    <meta property="og:title" content="@ViewData["Title"] - Felsen Auto" />
    <meta property="og:description" content="@(ViewData["Description"] ?? "Profesyonel kadromuz ve son teknoloji ekipmanlarımızla aracınızın tüm bakım ve onarım ihtiyaçları için yanınızdayız.")" />
    <meta property="og:image" content="https://www.felsenauto.com/images/logo.png" />

    <!-- Schema.org -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "AutoRepair",
      "name": "Felsen Auto",
      "image": "https://www.felsenauto.com/images/logo.png",
      "url": "https://www.felsenauto.com",
      "telephone": "+908503084641",
      "address": {
        "@@type": "PostalAddress",
        "streetAddress": "Cumhuriyet mahallesi Turgut Özal caddesi No 5/A Akpınar Plaza Şekerpınar Çayırova",
        "addressLocality": "Kocaeli",
        "addressCountry": "TR"
      },
      "geo": {
        "@@type": "GeoCoordinates",
        "latitude": 41.111162, 
        "longitude": 29.023254
      },
      "openingHoursSpecification": {
        "@@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "08:30",
        "closes": "18:30"
      }
    }
    </script>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Top Ticker -->
    <div class="top-ticker">
        <div class="ticker-track">
            <div class="ticker-content">
                <span><i class="fas fa-map-marker-alt"></i> Cumhuriyet mahallesi Turgut Özal caddesi No 5/A Akpınar Plaza Şekerpınar Çayırova Kocaeli</span>
                <span><i class="fas fa-phone"></i> 0850 308 4641</span>
                <span><i class="fas fa-clock"></i> Pzt - Cuma: 08:30 - 18:30</span>
            </div>
            <!-- Duplicate content for seamless infinite scroll -->
             <div class="ticker-content">
                <span><i class="fas fa-map-marker-alt"></i> Cumhuriyet mahallesi Turgut Özal caddesi No 5/A Akpınar Plaza Şekerpınar Çayırova Kocaeli</span>
                <span><i class="fas fa-phone"></i> 0850 308 4641</span>
                <span><i class="fas fa-clock"></i> Pzt - Cuma: 08:30 - 18:30</span>
             </div>
        </div>
    </div>
    
    <header class="header-main" id="header">
        <div class="container">
            <nav class="navbar">
                <a asp-controller="Home" asp-action="Index" class="brand-logo">
                    <img src="~/images/logo.png" alt="Felsen Auto Logo">
                </a>
                
                <div class="mobile-nav-toggle" id="navToggle">
                    <i class="fas fa-bars"></i>
                </div>

                <ul class="nav-links" id="navLinks">
                    <li><a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active-link" : "")">Ana Sayfa</a></li>
                    <li><a asp-controller="Hizmetlerimiz" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Hizmetlerimiz" ? "active-link" : "")">Hizmetlerimiz</a></li>
                    <li><a asp-controller="Hakkimizda" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Hakkimizda" ? "active-link" : "")">Hakkımızda</a></li>
                    <li><a asp-controller="Blog" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Blog" ? "active-link" : "")">Blog</a></li>
                    <li><a asp-controller="SSS" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "SSS" ? "active-link" : "")">S.S.S</a></li>
                    <li><a asp-controller="Iletisim" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Iletisim" ? "active-link" : "")">İletişim</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    
    <footer class="footer">
        <div class="container">
            <div class="footer-cols">
                <div>
                    <h4>Felsen Auto</h4>
                    <p>Felsen Oto Servis, aracınız için üst düzey bakım ve güven sunar.</p>
                </div>
                <div>
                    <h4>Hızlı Erişim</h4>
                   <a asp-controller="Hizmetlerimiz" asp-action="Index">Hizmetlerimiz</a>
                    <a asp-controller="Hakkimizda" asp-action="Index">Hakkımızda</a>
                    <a asp-controller="Iletisim" asp-action="Index">İletişim</a>
                </div>
                <div>
                    <h4>İletişim</h4>
                    <p><i class="fas fa-map-marker-alt text-primary"></i> Cumhuriyet mahallesi Turgut Özal caddesi No 5/A Akpınar Plaza Şekerpınar Çayırova Kocaeli</p>
                    <p><i class="fas fa-phone text-primary"></i> 0850 308 4641</p>
                    <p><i class="fas fa-envelope text-primary"></i> info@felsen.com.tr</p>
                </div>
            </div>
            <div style="text-align: center; border-top: 1px solid var(--glass-border); padding-top: 20px; font-size: 0.8rem; color: #666;">
                &copy; 2024 Felsen Auto. Tüm Hakları Saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/nav/js/nav.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
